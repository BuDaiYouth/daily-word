<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.ibudai.dao.UserDetailDao">

    <resultMap type="xyz.ibudai.entity.UserDetail" id="UserDetailMap">
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="score" column="score" jdbcType="INTEGER"/>
        <result property="locked" column="locked" jdbcType="INTEGER"/>
        <result property="enabled" column="enabled" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into daily_word.user_detail(email, score, locked, enabled)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.email}, #{entity.score}, #{entity.locked}, #{entity.enabled})
        </foreach>
    </insert>

    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into daily_word.user_detail(email, score, locked, enabled)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.email}, #{entity.score}, #{entity.locked}, #{entity.enabled})
        </foreach>
        on duplicate key update
        email = values(email) , score = values(score) , locked = values(locked) , enabled = values(enabled)
    </insert>
</mapper>

